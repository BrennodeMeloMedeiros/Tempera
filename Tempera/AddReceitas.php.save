<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="CSS/Style.css">
    <link rel="stylesheet" type="text/css" href="CSS/SideMenu.css">
    <link rel="stylesheet" type="text/css" href="CSS/AddReceita.css">
    <script src="JS\Script.js"></script>
    <script src="JS\AddReceita.js"></script>
    <script src="JS\SideMenu.js"></script>
    
    <title>
        Adicionar Receitas
    </title>

</head>
<body>
    <main id="main">
        <script>
            ShowSideMenu()
        </script>

        <content>
        <div class="Name-Page">
            Adicionar Receitas
        </div>
        <div class='Card'>
            <form>
                <div id='Name' class='Input-Row'> 
                    <input type='text' placeholder='Nome da receita'>    
                </div>
                <div id='Image-Painel'> 
                    <input type='file' name='image' id='image' class='Blue-Button'>
                    <label for='image' class='Blue-Button'>Adicionar Foto</label>
                </div>
                
                <div id='Inputs-Painel'>
                <div class='Input-Row' id='Row1'>
                    <!-- Linha de Tempo e Porções  -->
                    <input type='text' name='Time' id='Time'>

                    <input type='number' name='Qtdd-Porcoes' id='Qtdd-Pocoes'>
                    <input type='text' list='Tipos' name='Tipo-Porcoes' id='Tipo-Pocoes'>
                    <datalist id='Tipos'> 
                        <options value='Copos'>  
                        <options value='Pratos'>  
                        <options value='Pessoas'>  
                    </datalist>
                </div>

                <div class='Input-Row' id='Row2'>
		                    <!-- Painel de Ingredientes  -->

                </div>

                <div class='Input-Row' id='Row3'>
                    <!-- Painel de Modo de Preparo  -->

                </div>
                </div>
             
            
            </form>

        </div>
        </content>
    </main>
</body>
</html>
